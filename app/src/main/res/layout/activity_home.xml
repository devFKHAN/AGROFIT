<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:background="@drawable/home_back"
    android:orientation="vertical">
    <LinearLayout
        android:layout_margin="5sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageButton
                android:layout_width="34dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?selectableItemBackground"
                android:src="@drawable/user" />
            <TextView
                android:layout_weight="10"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="User Name"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:padding="8sp"
                android:layout_marginLeft="4sp"
                android:id="@+id/username"
                />

            <ImageButton
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/logout"
                android:background="?selectableItemBackground"
                android:id="@+id/logout"
                />

        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="30sp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/option">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/option1"
                    android:textSize="18sp"
                    android:text="Already have values"
                    />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/option2"
                    android:textSize="18sp"
                    android:text="Apply For Door Step Testing"
                    />
            </RadioGroup>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"

                android:id="@+id/result2"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:text="Name"
                        android:layout_weight=".4"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        />
                    <EditText
                        android:layout_weight=".6"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:id="@+id/name"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:text="Email ID"
                        android:layout_weight=".4"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        />
                    <EditText
                        android:layout_weight=".6"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:textAlignment="center"
                        android:id="@+id/email"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:text="Age"
                        android:layout_weight=".4"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        />
                    <EditText
                        android:layout_weight=".6"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textAlignment="center"
                        android:id="@+id/age"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:text="Address"
                        android:layout_weight=".4"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        />
                    <EditText
                        android:layout_weight=".6"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textAlignment="center"
                        android:id="@+id/address"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:text="Phone number"
                        android:layout_weight=".4"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        />
                    <EditText
                        android:layout_weight=".6"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:id="@+id/number12"
                        android:textAlignment="center"
                        />
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#479FC6"
                    app:cardCornerRadius="18dp"

                    >
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Submit"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:id="@+id/register"
                        android:background="?selectableItemBackground"
                        />

                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rslt"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/result1"
                android:visibility="gone"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:text="Nitorgen"
                        android:layout_weight=".4"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        />
                    <EditText
                        android:layout_weight=".6"
                        android:layout_width="0sp"
                        android:id="@+id/nitrogen"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:textAlignment="center"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:text="Phosphorus"
                        android:layout_weight=".4"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        />
                    <EditText
                        android:layout_weight=".6"
                        android:id="@+id/phosphorus"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:textAlignment="center"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:text="Potassium"
                        android:layout_weight=".4"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        />
                    <EditText
                        android:layout_weight=".6"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:textAlignment="center"
                        android:id="@+id/potassium"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:text="pH Value"
                        android:layout_weight=".4"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        />
                    <EditText
                        android:layout_weight=".6"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:textAlignment="center"
                        android:id="@+id/ph"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:text="Moisture"
                        android:layout_weight=".4"
                        android:layout_width="0sp"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        />
                    <EditText
                        android:layout_weight=".6"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:textAlignment="center"
                        android:id="@+id/moisture"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:text="Temperature"
                        android:layout_weight=".4"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        />
                    <EditText
                        android:layout_weight=".6"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:textAlignment="center"
                        android:id="@+id/temperature"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:text="Humidity"
                        android:layout_weight=".4"
                        android:layout_width="0sp"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        />
                    <EditText
                        android:id="@+id/humidity"
                        android:layout_weight=".6"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:textAlignment="center"
                        />
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#479FC6"
                    app:cardCornerRadius="18dp"

                    >
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Result"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:id="@+id/calculate"
                        android:background="?selectableItemBackground"
                        />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rslt1"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>